{
  "name": "ultimate-discord-moderation-bot",
  "version": "2.1.0",
  "description": "Professional Discord moderation bot with AI-powered protection and advanced features",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "restart": "npm run stop && npm run start",
    "stop": "pkill -f 'node index.js' || true",
    "logs": "tail -f logs/bot.log",
    "health": "node -e \"console.log('Bot health check:', new Date().toISOString())\"",
    "install-production": "npm ci --only=production",
    "setup": "mkdir -p bot_data logs backups transcripts exports && chmod +x index.js",
    "backup": "tar -czf backups/backup-$(date +%Y%m%d_%H%M%S).tar.gz bot_data config.json .env.example",
    "clean": "rm -rf node_modules && npm install",
    "update": "git pull origin main && npm install && npm run restart"
  },
  "keywords": [
    "discord",
    "bot",
    "moderation",
    "automod",
    "anti-spam",
    "anti-raid",
    "tickets",
    "dashboard",
    "plesk",
    "inos"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.9.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "discord.js": "^14.14.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ultimate-discord-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ultimate-discord-bot/issues"
  },
  "homepage": "https://github.com/yourusername/ultimate-discord-bot#readme",
  "os": [
    "linux",
    "win32",
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "preferGlobal": false,
  "private": true,
  "config": {
    "port": 3000,
    "env": "production"
  }
}
