# Discord Bot Configuration
BOT_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here

# Environment
NODE_ENV=production
PORT=3000

# Logging
LOG_LEVEL=info
LOG_FILE_SIZE=50MB
LOG_MAX_FILES=14

# Database
DB_BACKUP_INTERVAL=6h
DB_MAX_SIZE=100MB

# Performance
MEMORY_LIMIT=1024
CPU_LIMIT=80

# Security
RATE_LIMIT_WINDOW=15min
RATE_LIMIT_MAX=100

# Monitoring (Optional)
WEBHOOK_URL=your_monitoring_webhook
HEALTH_CHECK_PORT=3001
